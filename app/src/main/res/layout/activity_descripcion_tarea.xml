            android:textColor="@android:color/background_light" android:text="i"/>
    <TextView
            android:text="TextView"
            android:layout_width="285dp"
            android:layout_height="69dp"
            android:id="@+id/tvLugarDescripcion" android:layout_marginEnd="8dp"
